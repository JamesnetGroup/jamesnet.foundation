<UserControl x:Class="DemoOpenSilverApp.MainContent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:based="clr-namespace:Jamesnet.Platform.OpenSilver;assembly=Jamesnet.Platform.OpenSilver"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <DockPanel Background="Green">
        <StackPanel>
            <ListBox ItemsSource="{Binding Menus}" SelectedItem="{Binding CurrentMenu, Mode=TwoWay}" DisplayMemberPath="MenuName">
            </ListBox>
        </StackPanel>
        <based:AnimatedOpenSilverLayer LayerName="Content"/>
    </DockPanel>
</UserControl>
