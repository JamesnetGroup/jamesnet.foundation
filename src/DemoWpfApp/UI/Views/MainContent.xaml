<UserControl x:Class="DemoWpfApp.MainContent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:based="clr-namespace:Jamesnet.Platform.Wpf;assembly=Jamesnet.Platform.Wpf"
             xmlns:cnvts="clr-namespace:DemoWpfApp.Local.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <cnvts:BooleanToInverseConverter x:Key="BooleanToInverseConverter"/>
    </UserControl.Resources>

    <DockPanel Background="Green">
        <StackPanel>
            <ListBox ItemsSource="{Binding Menus}" SelectedItem="{Binding CurrentMenu}" DisplayMemberPath="MenuName" IsEnabled="{Binding IsProcessing, Converter={StaticResource BooleanToInverseConverter}}"/>
        </StackPanel>
        <based:AnimatedWPFLayer LayerName="Content"/>
    </DockPanel>
</UserControl>
